    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: MCP Client",
            "type": "debugpy",
            "request": "launch",
            "module": "agent.app",
            "python": "${workspaceFolder}/agent/.venv/bin/python",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python Debugger: MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp_server.server",
            "python": "${workspaceFolder}/mcp_server/.venv/bin/python",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}